<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"

    tools:context="org.darkbyte.classifieds.product_full_details.Product_Full_Details">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/activity_product__full__details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ceeed9"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/i1"
            android:background="#fff"
            android:id="@+id/largeImageView"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:background="#0000"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/recylerViewProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:background="#fff"/>

        <TextView

            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productTitle"
            android:text="Title"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/chat_box1"
            android:id="@+id/productPrice"
            android:text="$330"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="0dp"
            android:background="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Description : "

            android:textSize="20sp"
            android:textColor="#000"/>
        <TextView
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/productDescription"
            android:fontFamily="sans-serif-thin"
            android:background="@drawable/chat_box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="$330dsdnskjdjsdjsgdjgsjdgsajhgdjhsadjhgsajhdgjsahgdjhsgdjgsjdgjshdjsgdjsgjhdgsjdgjhsdjhsjdhsajhdgjhsgdjhsgdjhsdjhgsjhdgsajhdgjhsagdjhasgdjgsajdgjshgdjhsadhjsjhdsjdjhsagdjhsagdjhgsajhdgsjdgjsdjsgd"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="10dp"
            android:background="#4000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/buynowitem"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_weight="1"
                android:background="#039be5"
                android:textColor="#fff"/>


        </LinearLayout>





    </LinearLayout>


</ScrollView>